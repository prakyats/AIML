import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split as tts 
from sklearn.preprocessing import StandardScaler as ss
from sklearn.svm import SVC
from sklearn.datasets import load_iris as li

iris=li()

iris.feature_names

iris.target_names

df=pd.DataFrame(iris.data,columns=iris.feature_names)
df

df['target']=iris.target

df.head()

df.isnull().sum()

df['flower_name'] = df.target.apply(lambda x : iris.target_names[x])

df[df.target == 0].head(), df[df.target == 1].head() , df[df.target == 2].head()

df0 = df[:50]
df1 = df[50:100]
df2 = df[100:]

plt.xlabel('Sepal Length')
plt.ylabel('Sepal Width')
plt.scatter(df0['sepal length (cm)'],df0['sepal width (cm)'],color='green',marker='+')
plt.scatter(df1['sepal length (cm)'],df1['sepal width (cm)'],color='blue',marker='.')
plt.show()

X=pd.DataFrame(iris.data,columns=iris.feature_names)
X

y=df.target
y

X_train, X_test, y_train , y_test = tts( X , y , test_size=0.2 )

model=SVC()
model.fit(X_train, y_train)

model.score(X_test,y_test)

y_pred=model.predict([[4.8,3.0,1.5,0.3]])
y_pred

Tune parameters
1. Regularization , SVC(C=1)
2. gamma , SVC( gamma = 10)
3. kernel, SVC( kernel ='linear')

modelR=SVC(C=1)
modelR.fit(X_train, y_train)
modelR.score(X_test, y_test)

modelG=SVC(gamma =1)
modelG.fit(X_train, y_train)
modelG.score(X_test, y_test)

modelK=SVC(kernel='linear')
modelK.fit(X_train, y_train)
modelK.score(X_test, y_test)
